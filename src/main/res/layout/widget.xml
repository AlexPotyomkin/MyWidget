<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/left_arrow_button"
            android:layout_width="@dimen/arrow_button_width"
            android:layout_height="@dimen/arrow_button_height"
            android:layout_weight="1"
            android:background="@drawable/arrow_left_button_selector" />

        <TextView
            android:id="@+id/data_text"
            android:layout_width="@dimen/text_view_width"
            android:layout_height="@dimen/text_view_height"
            android:layout_marginTop="4dp"
            android:layout_weight="6"
            android:gravity="center"
            android:text="4.02.2016"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/right_arrow_button"
            android:layout_width="@dimen/arrow_button_width"
            android:layout_height="@dimen/arrow_button_height"
            android:layout_weight="1"
            android:background="@drawable/arrow_right_button_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_1"
            android:layout_width="@dimen/main_button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="2"
            android:text="0" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="@dimen/main_button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="2"
            android:text="0" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="@dimen/main_button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="2"
            android:text="0" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="@dimen/main_button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="2"
            android:text="0" />

    </LinearLayout>
</LinearLayout>